<mapping>
    <class name="ru.serega2rikov.tsvmenu.domain.Menuitem" identity="id">
    
        <map-to xml="menuitem" />
        
        <field name="id" type="long">
            <bind-xml name="id" node="element"/>
        </field>             
        <field name="name" type="string">
            <bind-xml name="name" node="element" />
        </field>             
        <field name="toplevel" type="boolean">
            <bind-xml name="toplevel" node="element" />
        </field>             
        <field name="link" type="string">
            <bind-xml name="link" node="element" />
        </field>             
        <field name="priority" type="int">
            <bind-xml name="priority" node="element" />
        </field>               
        <field name="parent" type="ru.serega2rikov.tsvmenu.domain.Menuitem">
            <bind-xml name="parent" node="element" />
        </field>  
    </class>
</mapping>